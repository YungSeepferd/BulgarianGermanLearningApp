{
  "version": "1.0",
  "servers": [
    {
      "name": "uvx-fetch-mcp",
      "type": "fetch",
      "url": "http://localhost:3001",
      "description": "UVX Fetch MCP Server for web scraping and data fetching",
      "enabled": true,
      "timeout": 30000,
      "headers": {
        "Content-Type": "application/json",
        "Accept": "application/json"
      },
      "capabilities": [
        "web_scraping",
        "data_fetching",
        "html_parsing",
        "json_extraction",
        "content_analysis"
      ]
    }
  ],
  "default_server": "uvx-fetch-mcp",
  "logging": {
    "level": "info",
    "file": ".uvx/uvx-fetch.log",
    "max_size": "5MB",
    "max_files": 5
  },
  "cache": {
    "enabled": true,
    "directory": ".uvx/cache",
    "max_size": "100MB",
    "ttl": 86400
  },
  "security": {
    "ssl_verify": true,
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 120,
      "burst_limit": 20
    }
  },
  "plugins": [
    {
      "name": "html-parser",
      "enabled": true
    },
    {
      "name": "json-extractor",
      "enabled": true
    },
    {
      "name": "content-analyzer",
      "enabled": true
    }
  ]
}