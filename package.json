{
	"name": "bulgarian-german-learning-app",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . --ext .js,.ts,.svelte --fix",
		"lint:check": "eslint . --ext .js,.ts,.svelte",
		"test": "vitest run",
		"test:unit": "vitest run --coverage",
		"test:unit:watch": "vitest --coverage",
		"test:all": "vitest run",
		"test:ci": "pnpm run test:unit && pnpm run test:components && pnpm run test:e2e && pnpm run test:accessibility",
		"coverage:serve": "npx http-server coverage -p 8080",
		"coverage:clean": "rm -rf coverage .nyc_output",
		"coverage:merge": "node scripts/merge-coverage-reports.js",
		"machine-translate": "inlang machine translate --project project.inlang"
	},
	"devDependencies": {
		"@lucide/svelte": "^0.555.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "3.0.10",
		"@sveltejs/kit": "2.49.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/postcss": "^4.1.17",
		"@tailwindcss/typography": "^0.5.19",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.9",
		"@testing-library/user-event": "^14.6.1",
		"@types/canvas-confetti": "^1.9.0",
		"@typescript-eslint/eslint-plugin": "^8.48.0",
		"@typescript-eslint/parser": "^8.48.0",
		"@vitest/coverage-v8": "^4.0.14",
		"autoprefixer": "^10.4.22",
		"axe-core": "^4.11.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-jsx-a11y": "^6.10.0",
		"eslint-plugin-svelte": "^3.13.0",
		"eslint-plugin-unicorn": "^48.0.1",
		"jsdom": "^27.2.0",
		"postcss": "^8.5.6",
		"svelte": "5.45.3",
		"svelte-check": "^4.3.4",
		"svelte-eslint-parser": "^1.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"vitest": "^4.0.14",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"canvas-confetti": "^1.9.4",
		"clsx": "^2.1.1",
		"cookie": "^0.7.0",
		"marked": "^17.0.1",
		"mdsvex": "^0.12.6",
		"tailwind-merge": "^3.4.0",
		"tar-fs": "^2.1.1",
		"zod": "^3.24.2"
	}
}