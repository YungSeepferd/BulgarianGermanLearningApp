{
  "name": "bulgarian-german-learning-app",
  "version": "1.0.0",
  "description": "Learn Bulgarian and German with spaced repetition",
  "main": "index.js",
  "scripts": {
    "dev": "npm run dev:hugo",
    "build": "npm run build:hugo && npm run build:workbox",
    "build:workbox": "workbox generateSW workbox-config.js",
    "workbox:inject": "workbox injectManifest workbox-config.js",
    "workbox:generate": "workbox generateSW workbox-config.js",
    "process-data": "./hugo-bg-de process-data",
    "build-tools": "cd tools && go build -o ../hugo-bg-de ./cmd/hugo-bg-de",
    "validate": "./hugo-bg-de validate && npm run lint:data",
    "lint:data": "node scripts/validate-data.mjs",
    "lint:esm": "node scripts/check-esm.mjs",
    "lint": "npm run lint:js && npm run lint:scss && npm run lint:data && npm run lint:esm",
    "lint:js": "eslint assets/js/ scripts/ --ext .js,.mjs,.ts",
    "lint:scss": "stylelint 'assets/scss/**/*.scss'",
    "format": "prettier --write 'assets/**/*.{js,mjs,ts,scss,html}' 'scripts/**/*.{js,mjs}' 'layouts/**/*.html' '*.{md,json}'",
    "test": "playwright test",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:coverage": "c8 jest",
    "test:ui": "playwright test --ui",
    "test:debug": "PWDEBUG=1 playwright test",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:a11y": "playwright test tests/playwright/a11y.test.ts",
    "test:a11y:all": "playwright test --grep @a11y",
    "test:a11y:headed": "playwright test --headed tests/playwright/a11y.test.ts",
    "test:a11y:debug": "PWDEBUG=1 playwright test tests/playwright/a11y.test.ts",
    "test:keyboard": "playwright test tests/playwright/keyboard-navigation.test.ts",
    "vocab:fetch": "node scripts/fetch-vocabulary.js",
    "vocab:analyze": "node scripts/analyze-vocabulary.js",
    "grammar:fetch": "node scripts/fetch-grammar.mjs",
    "grammar:enhance": "node scripts/enhance-grammar.mjs",
    "grammar:migrate": "node scripts/migrate-grammar.mjs",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "tsc:check": "tsc --noEmit",
    "build:ts": "tsc && npm run lint:js",
    "type-check": "npm run tsc:check && npm run lint:js",
    "lighthouse": "lhci autorun",
    "lighthouse:collect": "lhci collect",
    "lighthouse:assert": "lhci assert",
    "lighthouse:upload": "lhci upload",
    "build:hugo": "hugo --minify",
    "build:sveltekit": "cd svelte-frontend && npm run build",
    "dev:hugo": "hugo server -D",
    "dev:sveltekit": "cd svelte-frontend && npm run dev",
    "preview:hugo": "hugo server -D --renderToDisk",
    "preview:sveltekit": "cd svelte-frontend && npm run preview",
    "switch:hugo": "node scripts/switch-build-target.js hugo",
    "switch:sveltekit": "node scripts/switch-build-target.js sveltekit",
    "build:target": "BUILD_TARGET=hugo npm run build",
    "dev:target": "BUILD_TARGET=hugo npm run dev",
    "migration:status": "node -e \"const config = require('./svelte-frontend/build-config.js'); console.log('Migration Status:'); console.log('Completed:', config.getMigrationStatus().completed); console.log('Pending:', config.getMigrationStatus().pending); console.log('Progress:', config.getMigrationStatus().progress.toFixed(1) + '%');\"",
    "preview": "npm run preview:hugo"
  },
  "keywords": [
    "hugo",
    "language-learning",
    "spaced-repetition",
    "bulgarian",
    "german"
  ],
  "author": "Bulgarian-German Learning App",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "c8": "^10.1.3",
    "eslint": "^8.56.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-unicorn": "^51.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.7.3",
    "sass": "^1.93.3",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "ts-jest": "^29.4.5",
    "typescript": "~5.3.3",
    "workbox-build": "^7.4.0",
    "workbox-cli": "^7.4.0"
  }
}