{
	"name": "bulgarian-german-learning-app",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:gh-pages": "vite build --base /BulgarianGermanLearningApp/",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . --fix",
		"lint:check": "eslint .",
		"test": "vitest run",
		"test:unit": "vitest run --coverage",
		"test:unit:watch": "vitest --coverage",
		"test:components": "playwright test --config=playwright.ct.config.ts",
		"test:e2e": "playwright test tests/e2e",
		"test:accessibility": "playwright test tests/accessibility",
		"test:visual": "playwright test tests/visual",
		"test:all": "pnpm run test:unit && pnpm run test:components && pnpm run test:e2e && pnpm run test:accessibility && pnpm run test:visual",
		"test:ci": "pnpm run test:unit && pnpm run test:components && pnpm run test:e2e && pnpm run test:accessibility",
		"verify:vocabulary": "tsx scripts/verify-vocabulary.ts src/lib/data/unified-vocabulary.json",
		"deduplicate:vocabulary": "tsx scripts/deduplicate-vocabulary.ts src/lib/data/unified-vocabulary.json",
		"clean:vocabulary": "tsx scripts/clean-vocabulary.ts src/lib/data/unified-vocabulary.json",
		"quality:pipeline": "pnpm verify:vocabulary src/lib/data/unified-vocabulary.json --fix && pnpm deduplicate:vocabulary src/lib/data/unified-vocabulary.json && pnpm clean:vocabulary src/lib/data/unified-vocabulary.json && pnpm verify:vocabulary src/lib/data/unified-vocabulary.json",
		"coverage:serve": "npx http-server coverage -p 8080",
		"coverage:clean": "rm -rf coverage .nyc_output",
		"coverage:merge": "node scripts/merge-coverage-reports.js",
		"machine-translate": "inlang machine translate --project project.inlang",
		"rebuild:vocabulary": "tsx scripts/rebuild-vocabulary.ts",
		"migrate:vocabulary": "tsx scripts/migrate-vocabulary.ts",
		"migrate:vocabulary:dry": "pnpm migrate:vocabulary -- --dry-run",
		"migrate:vocabulary:verbose": "pnpm migrate:vocabulary -- --verbose",
		"init:vocabulary": "tsx -e \"import { initializeVocabulary } from './src/lib/data/loader'; initializeVocabulary().catch(console.error);\"",
		"db:setup": "tsx scripts/db-setup.ts",
		"seed": "pnpm db:setup",
		"simulate-ci": "node scripts/simulate-ci.js",
		"enrich:vocabulary": "tsx scripts/enrichment/orchestrate-enrichment.ts",
		"enrich:vocabulary:pilot": "tsx scripts/enrichment/orchestrate-enrichment.ts -- --batch-file vocabulary-batch-5a-colors.json",
		"enrich:vocabulary:validate": "tsx scripts/enrichment/orchestrate-enrichment.ts -- --validate-only",
		"enrich:vocabulary:cache": "tsx scripts/enrichment/orchestrate-enrichment.ts -- --skip-scraping",
		"enrich:vocabulary:dry": "tsx scripts/enrichment/orchestrate-enrichment.ts -- --dry-run",
		"export:vocabulary:batches": "node scripts/export-vocabulary-batches.mjs",
		"validate:vocabulary:batch": "node scripts/validate-vocabulary-batch.mjs",
		"apply:vocabulary:fixes": "node scripts/apply-vocabulary-fixes.mjs",
		"auto-fix:vocabulary": "node scripts/auto-fix-vocabulary.mjs",
		"import:enrichment": "node scripts/import-enrichment.mjs"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.11.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "3.0.10",
		"@sveltejs/kit": "2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/postcss": "^4.1.17",
		"@tailwindcss/typography": "^0.5.19",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.9",
		"@testing-library/user-event": "^14.6.1",
		"@types/canvas-confetti": "^1.9.0",
		"@types/node": "^25.0.1",
		"@types/uuid": "^11.0.0",
		"@typescript-eslint/eslint-plugin": "^8.48.1",
		"@typescript-eslint/parser": "^8.48.1",
		"@vitest/coverage-v8": "^4.0.15",
		"autoprefixer": "^10.4.22",
		"axe-core": "^4.11.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-svelte": "^3.13.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"globals": "^16.5.0",
		"jsdom": "^27.2.0",
		"lucide-svelte": "^0.561.0",
		"postcss": "^8.5.6",
		"svelte": "5.45.8",
		"svelte-check": "^4.3.4",
		"svelte-eslint-parser": "^1.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"terser": "^5.44.1",
		"ts-node": "^10.9.2",
		"tsx": "^4.21.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.15",
		"vitest-axe": "^0.1.0",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"bits-ui": "^2.14.4",
		"canvas-confetti": "^1.9.4",
		"clsx": "^2.1.1",
		"commander": "^14.0.0",
		"cookie": "^1.1.1",
		"fuse.js": "^7.1.0",
		"glob": "^13.0.0",
		"marked": "^17.0.1",
		"mdsvex": "^0.12.6",
		"p-queue": "^8.0.1",
		"playwright": "^1.57.0",
		"tailwind-merge": "^3.4.0",
		"tar-fs": "^3.1.1",
		"uuid": "^13.0.0",
		"zod": "^4.1.13"
	},
	"pnpm": {
		"overrides": {
			"cookie": "^0.7.2"
		}
	}
}
